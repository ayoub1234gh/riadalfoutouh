			<div class="row">
				<div class="col-xl-8 col-lg-7">
					<div class="news-sidebar__left">
						<div class="news-sidebar__content">
							{% for blog in blogs  %}
								{% if blog.id in [1,2,3] %}
									<div class="news-sidebar__single">
										<div class="news-sidebar__img">
											<img src="{{asset('/front/images/resources')}}/{{blog.image}}" alt="achat-d-un-bien-locatif-blog">
											<div class="news-sidebar__date">
												<p>blog</p>
											</div>
										</div>
										<div class="news-sidebar__content-box">
											<ul class="list-unstyled news-sidebar__meta" {% set searchString = '/ar/' %} {% if searchString in app.request.uri %} dir="rtl" lang="ar" {% endif %}>
												<li>
													<a>
														<i class="fas fa-tag"></i>
														{{"Appartements"|trans({},"front")}}</a>
												</li>
											</ul>
											<h3 class="news-sidebar__title">
												<a href="{{path('local_blog', {id: blog.id}) }}">{{blog.title | trans({},"front")}}</a>
											</h3>
											<p class="news-sidebar__text paragraph">{{blog.description|slice(0,300)|trans({},"front")}}
												...</p>
											<div class="news-sidebar__bottom">
												<a href="{{path('local_blog', {id: blog.id}) }}" class="news-sidebar__read-more">{{"Voir Plus"|trans({},"front")}}<span class="icon-right-arrow"></span>
												</a>
											</div>
										</div>
