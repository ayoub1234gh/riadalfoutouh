													<span class="sidebar__post-content-meta">
														<i class="fas fa-user-circle"></i>
														{{"Astuces"|trans({},"front")}}</span>
													<a href="{{path('local_blog', {id: blog.id}) }}">{{blog.title|trans({},"front")}}</a>
												</h3>
											</div>
										</li>
									{% endif %}
