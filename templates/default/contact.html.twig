                <!--Contact Page Start-->
        <section class="contact-page">
            <div class="container">
                <div class="section-title text-center" {% set searchString = '/ar/' %} {% if searchString in app.request.uri %} dir="rtl" lang="ar"{% endif %}>
                    <span class="section-title__tagline">{{"Pour nous contacter"|trans({},"front")}}</span>
                    <h2 class="section-title__title">{{"Veuillez utiliser les informations suivantes :"|trans({},"front")}}</h2>
                </div>
                <div class="contact-page__inner"{% set searchString = '/ar/' %} {% if searchString in app.request.uri %} dir="rtl" lang="ar"{% endif %}>
                    <form action="assets/inc/sendemail.php" class="contact-page__form contact-form-validated"
                        novalidate="novalidate">
                        <div class="row">
                            <div class="col-xl-6">
                                <div class="contact-page__input-box">
                                    <input type="text"{% set searchString = '/ar/' %} dir="rtl" lang="ar" {% if searchString in app.request.uri %} placeholder="الإسم واللقب"  {% else %}  placeholder="Nom et Prenom"  {% endif %} name="name">
                                </div>
                            </div>
                            <div class="col-xl-6">
                                <div class="contact-page__input-box">
                                    <input type="email" {% set searchString = '/ar/' %} dir="rtl" lang="ar" {% if searchString in app.request.uri %} placeholder="عنوان البريد الإلكتروني"  {% else %}  placeholder="Adresse mail"  {% endif %} name="email">
                                </div>
                            </div>
                            <div class="col-xl-6">
                                <div class="contact-page__input-box">
                                    <input type="text" {% set searchString = '/ar/' %} dir="rtl" lang="ar" {% if searchString in app.request.uri %} placeholder="رقم الهاتف"  {% else %}  placeholder="Numero de telephone"  {% endif %} name="phone">
                                </div>
                            </div>
                            <div class="col-xl-6">
                                <div class="contact-page__input-box">
                                    <input type="text" {% set searchString = '/ar/' %} dir="rtl" lang="ar" {% if searchString in app.request.uri %} placeholder="فاعل"  {% else %}  placeholder="Sujet"  {% endif %} name="Subject">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xl-12">
                                <div class="contact-page__input-box text-message-box">
                                    <textarea name="message"{% set searchString = '/ar/' %} dir="rtl" lang="ar" {% if searchString in app.request.uri %} placeholder="العنوان الإلكتروني"  {% else %}  placeholder="Ecrire un message"  {% endif %} placeholder="Ecrire un message"></textarea>
                                </div>
                                <div class="contact-page__btn-box">
                                    <button type="submit" class="thm-btn contact-page__btn">{{"Envoyer"|trans({},"front")}}</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </section>
